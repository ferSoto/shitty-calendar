<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparentBackground"
    android:gravity="center_horizontal|center_vertical"
    android:padding="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/current_date_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:layout_gravity="center_vertical|start"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp">
            <TextView
                android:id="@+id/current_year_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/example_year"
                android:layout_margin="0dp"
                />
            <TextView
                android:id="@+id/current_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/current_year_txt"
                android:textAllCaps="false"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="@string/example_date"/>
        </RelativeLayout>
        <com.example.customtimepicker.CustomCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:text="@string/button_cancel"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:layout_margin="4dp" />
            <Button
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:text="@string/button_accept"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:layout_margin="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>